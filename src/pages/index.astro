---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.jsx';
import VoiceCommand from '../components/VoiceCommand.jsx';
---

<Layout title="Inventario Patinetas - Inicio">
  <Navigation currentPath="/" client:load />
  
  <main class="mx-auto px-4 py-8 dark:bg-dark-700">
    <div class="text-center mb-8">
      <h1 class="text-4xl font-bold text-gray-900 mb-4 dark:text-white">
        Gesti√≥n de Inventario
      </h1>
      <p class="text-xl text-gray-600 dark:text-gray-400">
        Di o escribe tu comando para actualizar el inventario
      </p>
    </div>
    
    <VoiceCommand client:load />
    
    <!-- Quick Stats -->
    <div class="mt-12 grid grid-cols-1 md:grid-cols-4 gap-6">
      <div class="bg-white rounded-lg shadow-sm p-6 text-center dark:bg-dark-800">
        <div class="text-3xl font-bold text-blue-600 mb-2 dark:text-neon-blue-500 animate-glow text-4xl font-bold">127</div>
        <div class="text-sm text-gray-600 dark:text-white">Items Total</div>
      </div>
      <div class="bg-white rounded-lg shadow-sm p-6 text-center dark:bg-dark-800">
        <div class="text-3xl font-bold text-green-600 mb-2 dark:text-neon-green-500 animate-glow">3</div>
        <div class="text-sm text-gray-600 dark:text-white">Talleres</div>
      </div>
      <div class="bg-white rounded-lg shadow-sm p-6 text-center dark:bg-dark-800">
        <div class="text-3xl font-bold text-yellow-600 mb-2 dark:text-neon-yellow-500 animate-glow">8</div>
        <div class="text-sm text-gray-600 dark:text-white">Stock Bajo</div>
      </div>
      <div class="bg-white rounded-lg shadow-sm p-6 text-center dark:bg-dark-800">
        <div class="text-3xl font-bold text-red-600 mb-2 dark:text-neon-red-500 animate-glow">12</div>
        <div class="text-sm text-gray-600 dark:text-white">Clientes Esperando</div>
      </div>
    </div>
  </main>
</Layout>
