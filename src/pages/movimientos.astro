---
import Navigation from '../components/Navigation.jsx';
import MovementForm from '../components/MovementForm.jsx'; // ← AQUÍ SE USA
import Layout from '../layouts/Layout.astro';
---

<Layout title="Movimientos - Transferencias">
  <Navigation currentPath="/movimientos" client:load />
  
  <main class="max-w-7xl mx-auto px-4 py-8">
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-gray-900 mb-4">
        Movimientos de Inventario
      </h1>
      <p class="text-lg text-gray-600">
        Registra transferencias entre talleres y técnicos
      </p>
    </div>
    
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
      <!-- Movement Form - AHORA USA EL COMPONENTE REACT -->
      <div class="bg-white rounded-lg shadow-sm p-6">
        <h2 class="text-xl font-semibold mb-6">Nuevo Movimiento</h2>
        <MovementForm client:load />
      </div>
      
      <!-- Recent Movements - Este puede quedarse estático -->
      <div class="bg-white rounded-lg shadow-sm p-6">
        <h2 class="text-xl font-semibold mb-6">Movimientos Recientes</h2>
        
        <div class="space-y-4">
          <div class="border-l-4 border-blue-500 pl-4 py-2">
            <div class="flex justify-between items-start">
              <div>
                <p class="font-medium text-gray-900">Batería 36V (x3)</p>
                <p class="text-sm text-gray-600">Taller Medellín → Técnico Juan</p>
                <p class="text-xs text-gray-500 mt-1">Hace 2 horas</p>
              </div>
              <span class="px-2 py-1 bg-green-100 text-green-800 text-xs rounded-full">Completado</span>
            </div>
          </div>
          
          <div class="border-l-4 border-yellow-500 pl-4 py-2">
            <div class="flex justify-between items-start">
              <div>
                <p class="font-medium text-gray-900">Rueda 90mm (x10)</p>
                <p class="text-sm text-gray-600">Almacén Central → Taller Bogotá</p>
                <p class="text-xs text-gray-500 mt-1">Hace 5 horas</p>
              </div>
              <span class="px-2 py-1 bg-yellow-100 text-yellow-800 text-xs rounded-full">En Tránsito</span>
            </div>
          </div>
          
          <div class="border-l-4 border-green-500 pl-4 py-2">
            <div class="flex justify-between items-start">
              <div>
                <p class="font-medium text-gray-900">Motor 3000W (x1)</p>
                <p class="text-sm text-gray-600">Taller Bogotá → Técnico María</p>
                <p class="text-xs text-gray-500 mt-1">Ayer</p>
              </div>
              <span class="px-2 py-1 bg-green-100 text-green-800 text-xs rounded-full">Completado</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>
</Layout>