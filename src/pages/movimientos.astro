---
import Navigation from '../components/Navigation.jsx';
import MovementForm from '../components/MovementForm.jsx'; // ← AQUÍ SE USA
import Layout from '../layouts/Layout.astro';
import LastMovements from '@/components/LastMovements';
---

<Layout title="Movimientos - Transferencias">
  <Navigation currentPath="/movimientos" client:load />
  
  <main class="max-w-7xl mx-auto px-4 py-8 dark:bg-dark-700">
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-gray-900 mb-4 dark:text-white">
        Movimientos de Inventario
      </h1>
      <p class="text-lg text-gray-600 dark:text-gray-400">
        Registra transferencias entre talleres y técnicos
      </p>
    </div>
    
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
      <!-- Movement Form - AHORA USA EL COMPONENTE REACT -->
      <div class="bg-white rounded-lg shadow-sm p-6 dark:bg-dark-800">
        <h2 class="text-xl font-semibold mb-6 dark:text-white">Nuevo Movimiento</h2>
        <MovementForm client:load />
      </div>
      
      <!-- Recent Movements - Este puede quedarse estático -->
      <div class="bg-white rounded-lg shadow-sm p-6 dark:bg-dark-800 ">
        <h2 class="text-xl font-semibold mb-6 dark:text-white">Movimientos Recientes</h2>
        
        <div class="space-y-4 max-h-[500px] overflow-y-auto">
          <LastMovements client:load />
        </div>
      </div>
    </div>
  </main>
</Layout>